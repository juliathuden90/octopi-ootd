<div class="container">
  <br>
  <h1>Add Your Octopus!</h1>

  <%= simple_form_for(@squid) do |f| %>
    <%= f.input :name %>
    <%= f.input :description %>
    <%= f.input :price %>
    <%= f.input :photo, as: :file %>
    <br>
    <div class="cancle-btn-div">
      <%= f.button :submit, class: 'btn btn-flat', style: 'font-weight: bold;', value: 'Add Octopus' %>
    <% end %>
      <%= link_to "Cancel", squids_path, class:"btn btn-flat" %>
    </div>
</div>
