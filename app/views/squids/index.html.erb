<%# @squids.each do |squid| %>
<%#= squid.name %>
<%# end %>

<!DOCTYPE html>
<html>
  <head>
    <h1>Squids#index</h1>
    <link rel="stylesheet" type="text/scss" href="/assets/styles.scss">
    <script type="text/javascript" src="/assets/scripts.js"></script>
  </head>
  <body>
    <div class="card-container">
    <% @squids.each do |squid| %>
    <div class="card">
      <%= cl_image_tag squid.photo.key, height: 250, width: 400, crop: :fill, alt: squid.name %>
      <div class="card-info">
        <div class="card-info-container">
          <h2><%= squid.name %></h2>
          <span class="card-price">$<%= squid.price %> per night</span>
        </div>
        <p><%= squid.description %></p>
      </div>
    </div>
  <% end %>
</div>
  </body>
</html>
